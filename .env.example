# Shopify application credentials
SHOPIFY_API_KEY="your_api_key"
SHOPIFY_API_SECRET="your_api_secret"
SHOPIFY_APP_URL="https://your-app-url.ngrok.app"

# Shopify scopes requested during OAuth
SCOPES="read_products,write_products"

# Database connection string for Prisma (PostgreSQL)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Session configuration
SESSION_COOKIE_NAME="shopify_app_session"
SESSION_COOKIE_SECRET="replace-with-random-string"

# Optional: customize OAuth callback behavior
SHOPIFY_APP_NAME="Free Ship"
SHOPIFY_WEBHOOK_API_VERSION="2024-04"
